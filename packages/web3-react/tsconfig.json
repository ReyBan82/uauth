{
  "include": ["./src"],
  "compilerOptions": {
    "outDir": "./build",
    "target": "ES6",
    "module": "ESNext",
    "allowJs": true,
    "moduleResolution": "Node",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "exclude": ["**/*.spec.ts"]
}